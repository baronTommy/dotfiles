// Place your key bindings in this file to overwrite the defaults
[
    {
        // ウィンドウフォーカス
        "key":"ctrl+alt+f",
        "command": "workbench.action.nextEditorInGroup"
    },
    {
        // ウィンドウフォーカス
        "key":"ctrl+alt+b",
        "command": "workbench.action.previousEditorInGroup"
    },
    {
        // 保存時にtask 実行 (通常状態)
        "key": "cmd+s",
        "command": "workbench.action.tasks.runTask",
        "when": "workspaceFolderCount != 0 && !inDebugMode", 
        "args": "save_hook"
    },
    {
        // 保存時にtask 実行 (デバッグ中)
        // デバッグ中はテスト流さない などのハンドリングに利用
        "key": "cmd+s",
        "command": "workbench.action.tasks.runTask",
        "when": "workspaceFolderCount != 0 && inDebugMode",
        "args": "save_hook_debug"
    },
    {
        "key": "shift+cmd+d",
        "command": "workbench.action.debug.start",
        "args": "vscode-jest-test"
    }
]
